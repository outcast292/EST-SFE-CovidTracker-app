<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

            <ImageView
                android:id="@+id/checkimg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_report_problem_24px"
                android:tint="@color/failureStinks"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Votre status montre que vous êtes malade"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/failureStinks"
                android:layout_below="@+id/checkimg"
                android:gravity="center"
                android:textSize="15dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Veuillez rester chez vous et ne pas sortir que pour la nécessité."
                android:textColor="@color/failureStinks"
                android:layout_below="@+id/tv1"
                android:gravity="center_horizontal"
                android:layout_margin="7dp"
                />



</RelativeLayout>